<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        >
        <TextView
            android:id="@+id/tvItemOnboardingHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Welcome to MyShop!"
            android:fontFamily="@font/open_sans"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivItemOnboardingImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/tvItemOnboardingHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="24dp"
            android:src="@drawable/ic_onboarding_page_1"/>

        <TextView
            android:id="@+id/tvItemOnboardingDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@+id/ivItemOnboardingImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/open_sans"
            android:textSize="20sp"
            android:text="This application has been developed so that you can shop safely and easily. We are very pleased to have you among us. Start filling your cart!"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
